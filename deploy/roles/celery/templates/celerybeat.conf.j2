[program:{{ celery_beat_app_name }}]
directory={{ git_root }}
command={{ virtualenv_python }} {{ git_root }}/manage.py celery beat 
autostart=true
autorestart=true
redirect_stderr=true
stdout_logfile_maxbytes=50MB
stdout_logfile_backups=10
stderr_logfile_maxbytes=50MB
stderr_logfile_backups=10
startsecs=10

# Need to wait for currently executing tasks to finish at shutdown.
# Increase this if you have very long running tasks.
stopwaitsecs=600

user={{ application_user }}
environment=HOME='{{ git_root }}',USER='{{ application_user }}',DJANGO_SETTINGS_MODULE='{{ django_settings_module }}',VIRTUAL_ENV='{{ virtualenv_path }}'
